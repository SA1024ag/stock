{
  "name": "ai-stock-market-simulator",
  "version": "1.0.0",
  "description": "AI-powered stock market simulator for learning and practicing investing",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "install-all": "npm run install-server && npm run install-client",
    "build": "cd client && npm run build"
  },
  "keywords": [
    "stock-market",
    "simulator",
    "paper-trading",
    "ai",
    "mern"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "dependencies": {
    "file-saver": "^2.0.5",
    "lightweight-charts": "^5.1.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "razorpay": "^2.9.6",
    "react-hot-toast": "^2.6.0",
    "upstox": "^1.2.3",
    "xlsx": "^0.18.5"
  }
}
